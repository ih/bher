(define samples 100)
(define lag 2)
(define runs 1)
(define error-tolerance 0.07)
(define tree (lazy-list->all-list (gen-tree)))
;;(pretty-print tree)
(equal? tree '(node a))

(check-test (repeat runs
                    (lambda ()
                      (mh-query samples lag
                                (define tree (lazy-list->all-list (gen-tree)))
                                (define obs (smc-eval-obs-marginalize tree 5))
                                (if (equal? tree '(node a)) 1 0)
                                (obs (lazy-list 'a)))))
            (lambda (b) b)
            .976
            error-tolerance
            "scoring a single node")

