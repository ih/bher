(define samples 10)
(define lag 2)
(define runs 1)
(define error-tolerance 0.07)

(check-test (repeat runs
                    (lambda ()
                      (mh-query samples lag
                                (define tree (lazy-list->all-list (gen-tree)))
                                (define obs (smc-eval-obs-marginalize tree 10))
                                (if (equal? (lazy-list->all-list tree) '(node a)) 1 0)
                                (obs (lazy-list 'a)))))
            (lambda (b) b)
            (/ 6 10)
            error-tolerance
            "scoring a single node")